  <!-- Calendly widget JS (necesario para el embed) -->
  <script id="calendly-js" src="https://assets.calendly.com/assets/external/widget.js" async></script>

  <!-- Inicialización del widget de Agenda -->
  <script>
    (function(){
      const tabs = document.querySelectorAll('#agenda .segmented button');
      const widget = document.getElementById('agenda-widget');
      let activeUrl = tabs[0].dataset.url;

      function mountCalendly(url){
        // Limpia contenedor
        widget.innerHTML = '';
        activeUrl = url;
        // Si Calendly está disponible, monta widget inline
        if (window.Calendly && typeof Calendly.initInlineWidget === 'function'){
          Calendly.initInlineWidget({
            url: url + '?hide_gdpr_banner=1',
            parentElement: widget
          });
        } else {
          // Fallback a WhatsApp si aún no cargó el script
          widget.innerHTML = '<p class="helper">Cargando agenda… Si tarda, ' +
            '<a target="_blank" rel="noopener" href="https://wa.me/34922295254?text=Hola%20Maestro,%20quiero%20reservar%20[servicio]%20el%20[fecha]%20a%20[hora].">reserva por WhatsApp</a> ' +
            'o llama al <a href="tel:+34922295254">922 295 254</a>.</p>';
        }
      }

      // Eventos de los botones
      tabs.forEach(btn=>{
        btn.addEventListener('click', ()=>{
          tabs.forEach(b=>b.setAttribute('aria-pressed','false'));
          btn.setAttribute('aria-pressed','true');
          mountCalendly(btn.dataset.url);
        });
      });

      // Monta la primera vez cuando el DOM esté listo
      document.addEventListener('DOMContentLoaded', ()=> mountCalendly(activeUrl));
      // Reintenta cuando el script de Calendly termine de cargar
      const calScript = document.getElementById('calendly-js');
      calScript.addEventListener('load', ()=> mountCalendly(activeUrl));
    })();
  </script>
